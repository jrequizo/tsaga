{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "types": [
            "node",
            "vitest/globals"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src",
        "vitest.config.ts",
        "vite.config.ts",
        "test/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}